NAME := philo

CC := gcc
CFLAGS := -Wall -Wextra -Werror
CFLAGS += -g
CFLAGS += -fsanitize=address

INCLUDEDIR := ./includes/

SRCDIR := ./srcs/
SRCS := main.c\
		parser.c\
		init.c\
		create_philos.c\
		utils.c

VPATH := $(SRCDIR)\
		 $(SRCDIR)parser

OBJDIR := ./objs/
OBJS := $(addprefix $(OBJDIR), $(notdir $(SRCS:.c=.o)))

$(OBJDIR)%.o:	%.c
	$(CC) $(CFLAGS) -I$(INCLUDEDIR) -c $< -o $@

all:	$(NAME)

$(NAME): $(OBJS)
	$(CC) $(CFLAGS) $(OBJS) -o $@

$(OBJS): | $(OBJDIR)

$(OBJDIR):
	mkdir $(OBJDIR)

clean:
	rm -rf $(OBJDIR)

fclean: clean
	rm -f $(NAME)

re: fclean all

.PHONY: all clean fclean re
